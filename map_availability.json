{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 640,
  "height": 440,
  "layer": [
    {
      "data": {
        "url": "data/ne_1.json",
        "format": { "type": "topojson", "feature": "states2" }
      },
      "projection": { "type": "mercator" },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#e0e0e0",
        "strokeWidth": 0.5
      }
    },


    {
      "data": {
        "url": "data/ne_1.json",
        "format": { "type": "topojson", "feature": "states1" }
      },
      "projection": { "type": "mercator" },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": { "url": "data/4G_availability_in_Malaysia.csv"
 },
            "key": "States",
            "fields": ["Availability_Q1_2022"]
          }
        }
      ],
      "mark": { "type": "geoshape" },
      "encoding": {
        "color": {
          "field": "Availability_Q1_2022",
          "type": "quantitative",
          "title": "4G availability (%)",
          "scale": { "scheme": "blues" }
        },
        "tooltip": [
          { "field": "properties.name", "title": "State" },
          { "field": "Availability_Q1_2022", "title": "4G availability", "format": ".1f" }
        ]
      }
    }
  ],
  "title": { "text": "Malaysia â€” 4G Availability by State (2022)", "anchor": "start" }
}

